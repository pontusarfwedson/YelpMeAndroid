<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mUserPhoto"
        android:layout_below="@+id/mPhotographerTxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/mPhotographerTxt"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/mUserPhoto"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mPhotoView"
        android:layout_below="@id/mPhotographerTxt"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/mLikesTxt"
        android:layout_below="@+id/mPhotoView"
        android:layout_alignRight="@id/mPhotoView"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/mPositionTxt"
        android:layout_below="@+id/mPhotoView"
        android:layout_alignLeft="@id/mPhotoView"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="40dp"
        android:layout_below="@+id/mLikesTxt"/>


</RelativeLayout>
